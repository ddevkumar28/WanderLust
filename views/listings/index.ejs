<% layout("layouts/boilerplate") %>

<!-- Search Bar -->
<div class="container mt-3">
  <div
    class="search-bar bg-white rounded-pill shadow-sm d-flex flex-wrap align-items-center"
  >
    <!-- Where -->
    <div class="flex-fill px-2 py-1 border-end text-truncate">
      <small class="fw-bold d-block">Where</small>
      <span class="text-muted small">Search destinations</span>
    </div>

    <!-- Check in -->
    <div class="flex-fill px-2 py-1 border-end text-truncate">
      <small class="fw-bold d-block">Check in</small>
      <span class="text-muted small">Add dates</span>
    </div>

    <!-- Check out -->
    <div class="flex-fill px-2 py-1 border-end text-truncate">
      <small class="fw-bold d-block">Check out</small>
      <span class="text-muted small">Add dates</span>
    </div>

    <!-- Who -->
    <div
      class="flex-fill px-2 py-1 d-flex justify-content-between align-items-center text-truncate"
    >
      <div>
        <small class="fw-bold d-block">Who</small>
        <span class="text-muted small">Add guests</span>
      </div>
      <button class="btn btn-danger rounded-circle ms-2">
        <i class="bi bi-search text-white"></i>
      </button>
    </div>
  </div>
</div>

<style>
  /* Filters responsiveness */
  #filters {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    padding: 0.5rem 0.5rem;
    gap: 0.75rem;
    margin-right: 0; /* Remove extra space */
  }

  #filters::-webkit-scrollbar {
    display: none; /* Hide scrollbar for cleaner UI */
  }

  .filter {
    text-align: center;
    flex: 0 0 auto;
    opacity: 0.7;
    min-width: 60px;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.75rem;
    margin-top: 0.25rem;
  }

  .tax-info {
    display: none;
  }

  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3rem;
    padding: 0.25rem 0.75rem;
    margin-left: auto;
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    white-space: nowrap;
  }

  /* Search bar responsive fixes */
  .search-bar {
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .search-bar {
      flex-direction: column;
      border-radius: 1rem !important;
      padding: 0.5rem;
    }

    .search-bar > div {
      border: none !important;
      width: 100%;
      text-align: left;
    }

    .search-bar button {
      align-self: flex-end;
    }
  }
</style>

<!-- Filters Bar -->
<div id="filters" class="px-2">
  <div class="filter">
    <div><i class="fa-solid fa-fire fa-lg"></i></div>
    <p>Trending</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-bed fa-lg"></i></div>
    <p>Rooms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain-city fa-lg"></i></div>
    <p>Iconic Cities</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-mountain fa-lg"></i></div>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <div><i class="fa-brands fa-fort-awesome fa-lg"></i></div>
    <p>Castles</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-person-swimming fa-lg"></i></div>
    <p>Amazing Pools</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-campground fa-lg"></i></div>
    <p>Camping</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-cow fa-lg"></i></div>
    <p>Farms</p>
  </div>
  <div class="filter">
    <div><i class="fa-solid fa-snowflake fa-lg"></i></div>
    <p>Arctic</p>
  </div>

  <!-- Taxes Toggle -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input
        class="form-check-input"
        type="checkbox"
        role="switch"
        id="switchCheckDefault"
      />
      <label class="form-check-label small" for="switchCheckDefault">
        Display total after taxes
      </label>
    </div>
  </div>
</div>

<!-- Listings Grid -->
<div class="container my-4">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% for (let listing of allListings) { %>
    <div class="col">
      <a
        href="/listings/<%= listing._id %>"
        class="text-decoration-none text-dark"
      >
        <div class="card border-0 shadow-sm h-100 position-relative">
          <!-- Image -->
          <img
            src="<%= listing.image.url %>"
            class="card-img-top rounded-3"
            alt="listing_image"
            style="height: 220px; object-fit: cover"
          />

          <!-- Wishlist Heart -->
          <button
            class="btn btn-light position-absolute top-0 end-0 m-2 rounded-circle shadow-sm"
          >
            <i class="bi bi-heart"></i>
          </button>

          <!-- Card Body -->
          <div class="card-body">
            <h6 class="fw-bold mb-1"><%= listing.title %></h6>
            <p class="text-muted small mb-1">
              <%= listing.location || "Unknown location" %>
            </p>
            <p class="fw-semibold mb-0">
              â‚¹<%= listing.price.toLocaleString("en-IN") %>
              <span class="text-muted">for 1 night</span>
              <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</div>

<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for (info of taxInfo) {
      if (info.style.display != "inline") {
        info.style.display = "inline";
      } else {
        info.style.display = "none";
      }
    }
  });
</script>
