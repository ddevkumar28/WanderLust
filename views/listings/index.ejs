<% layout("/layouts/boilerplate") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3><%= listing.title %></h3>
    </div>

    <div class="card col-8 offset-2 show-card listing-show p-3">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top rounded mb-3"
        alt="<%= listing.title %>"
      />

      <div class="card-body">
        <h5 class="card-title"><%= listing.location %></h5>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text fw-bold">$<%= listing.price %> / night</p>
      </div>
    </div>
  </div>

  <!-- Filters + Search Bar -->
  <div class="container mt-4">
    <!-- Filters Row -->
    <div class="d-flex flex-nowrap overflow-auto mb-3 gap-2">
      <button class="btn btn-light border rounded-pill px-3 py-1 flex-shrink-0">
        <i class="bi bi-houses me-1"></i> Houses
      </button>
      <button class="btn btn-light border rounded-pill px-3 py-1 flex-shrink-0">
        <i class="bi bi-tree me-1"></i> Nature
      </button>
      <button class="btn btn-light border rounded-pill px-3 py-1 flex-shrink-0">
        <i class="bi bi-water me-1"></i> Beach
      </button>
      <button class="btn btn-light border rounded-pill px-3 py-1 flex-shrink-0">
        <i class="bi bi-building me-1"></i> Apartments
      </button>
    </div>

    <!-- Search Bar -->
    <div
      class="search-bar bg-white rounded-pill shadow-sm d-flex flex-wrap align-items-center"
    >
      <!-- Where -->
      <div class="search-item px-2 border-end">
        <small class="fw-bold d-block">Where</small>
        <span class="text-muted small">Search</span>
      </div>

      <!-- Check in -->
      <div class="search-item px-2 border-end">
        <small class="fw-bold d-block">Check in</small>
        <span class="text-muted small">Add</span>
      </div>

      <!-- Check out -->
      <div class="search-item px-2 border-end">
        <small class="fw-bold d-block">Check out</small>
        <span class="text-muted small">Add</span>
      </div>

      <!-- Who -->
      <div
        class="search-item px-2 d-flex justify-content-between align-items-center"
      >
        <div>
          <small class="fw-bold d-block">Who</small>
          <span class="text-muted small">Guests</span>
        </div>
        <button class="btn btn-danger rounded-circle ms-2">
          <i class="bi bi-search text-white"></i>
        </button>
      </div>
    </div>
  </div>

  <style>
    /* General search bar */
    .search-bar {
      font-size: 0.85rem;
      overflow: hidden; /* removes right-side extra space */
    }

    .search-item {
      flex: 1 1 auto;
      min-width: 70px;
      text-align: center;
    }

    /* Responsive tweaks */
    @media (max-width: 576px) {
      .search-bar {
        border-radius: 1rem !important;
        padding: 0.3rem 0.4rem;
      }

      .search-item {
        flex: 1 1 25%; /* four equal parts */
        padding: 0.2rem !important;
      }

      .search-item small,
      .search-item span {
        font-size: 0.65rem;
      }

      .search-bar .btn {
        width: 28px;
        height: 28px;
        padding: 0;
      }

      .search-bar i {
        font-size: 0.7rem;
      }

      /* Filters buttons scrollable */
      .d-flex.flex-nowrap {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
      }

      .d-flex.flex-nowrap::-webkit-scrollbar {
        display: none;
      }

      .btn {
        font-size: 0.7rem;
        padding: 0.25rem 0.6rem;
      }
    }
  </style>
</body>
